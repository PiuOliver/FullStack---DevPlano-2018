<%- include('../header')%>
<a class="btn btn-light" href="/categorias/nova">Inserir nova Categoria</a><br>
<a class="btn btn-light" href="/publicacoes/nova">Inserir nova Publicação</a><br>
<table class="table table-hover table-striped">
    <thead>
        <th scope="row">Categoria</th>
        <th scope="row">Ações</th>
    </thead>
    <tbody>
        <% categorias.forEach(categoria => {%>
            <tr>
                <td scope="row"> <a href="/publicacoes/categoria/<%=categoria.id%>"><%= categoria.categorias  %></a> </td>
                <td>
                        <a href="/categorias/excluir/<%=categoria.id%>">Excluir</a> 
                        <a href="/categorias/editar/<%=categoria.id%>">Editar</a>
                </td>
            </tr>
        <%})%>
    </tbody>
</table>

<%- include('../footer')%>